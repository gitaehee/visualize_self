{
    "version": 2,
    "builds": [
    {
      "src": "api/flask_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/flask_app.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ],
    "installCommand": "npm install",  
    "buildCommand": "npm run build",  
    "ignoreCommand": "git diff --quiet HEAD^ HEAD -- frontend/ api/",
    "env": {
        "NEXT_ESLINT_IGNORE_DURING_BUILDS": "true"  
    }
  }
  